@model Project.Models.ProjectInfo


<form method="post" asp-action="Delete">
    <input asp-for="ProjectID" hidden />

    <div class="border p-3">
        <div class="form-group-row">
            <h2 class="text-info pl-3">Delete Project</h2>
        </div>
        <div class="row pt-3">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProjectName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProjectName" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProjectCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProjectCode" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>